PINECONE_INDEX=cross-lingual-rag
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# -----------------------------------------
# Google Gemini Configuration
# -----------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_VISION_MODEL=gemini-1.5-flash

